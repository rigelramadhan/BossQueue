<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white_1">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_history"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_history2"
            android:layout_margin="5dp"
            android:layout_width="80dp"
            android:layout_height="87dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/img_history"
                android:src="@drawable/img_tes"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_success"
            android:layout_alignParentRight="true"
            android:text="@string/success"
            android:textSize="12dp"
            android:textColor="@color/green"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_history_name"
            android:layout_below="@id/tv_success"
            android:layout_toRightOf="@id/cv_history2"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Hause Rooftop"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/orange_2"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_Rp"
            android:layout_below="@id/tv_history_name"
            android:layout_toRightOf="@id/cv_history2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Rp."
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_history_price"
            android:layout_below="@id/tv_history_name"
            android:layout_toRightOf="@id/tv_Rp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="125.000.00,-"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_history_date"
            android:layout_below="@id/tv_history_price"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="27 November 2021"
            android:textColor="@color/orange_2"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>