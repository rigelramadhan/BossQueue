<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white_1">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_activities"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_activities2"
            android:layout_margin="5dp"
            android:layout_width="80dp"
            android:layout_height="87dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/img_activities"
                android:src="@drawable/img_tes"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_pending"
            android:layout_alignParentRight="true"
            android:text="@string/pending"
            android:textSize="12dp"
            android:textColor="@color/red"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_activities_name"
            android:layout_below="@id/tv_pending"
            android:layout_toRightOf="@id/cv_activities2"
            android:layout_toLeftOf="@id/layout_pay"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Hause Rooftop"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/orange_2"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_Rp"
            android:layout_below="@id/tv_activities_name"
            android:layout_toRightOf="@id/cv_activities2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Rp."
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_activities_price"
            android:layout_below="@id/tv_activities_name"
            android:layout_toRightOf="@id/tv_Rp"
            android:layout_toLeftOf="@id/layout_pay"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="125.000.00,-"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:id="@+id/layout_pay"
            android:layout_below="@id/tv_activities_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:background="@drawable/rectangle_layout_pay">

            <TextView
                android:id="@+id/tv_pay"
                android:layout_centerInParent="true"
                android:text="@string/pay"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>