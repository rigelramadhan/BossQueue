<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/layout_emailpassword2"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@id/layout_emailpassword"
        android:layout_marginLeft="-100dp"
        android:layout_marginTop="-385dp"
        android:layout_marginRight="-100dp"
        android:background="@drawable/oval_layout_login" />

    <RelativeLayout
        android:id="@+id/layout_welcome2"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@id/layout_welcome"
        android:layout_marginLeft="-100dp"
        android:layout_marginTop="-385dp"
        android:layout_marginRight="-100dp"
        android:background="@drawable/oval_layout_login2" />

    <RelativeLayout
        android:id="@+id/layout_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_2">

        <TextView
            android:id="@+id/tv_hi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:text="@string/Hi"
            android:textColor="@color/white"
            android:textSize="60dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_below="@id/tv_hi"
            android:text="@string/welcome_to_BOSSQUE"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_thisapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_welcome"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:text="@string/this_app_helping_you_to_bookin"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_emailpassword"
        android:layout_below="@id/layout_welcome2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_1">

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="email"
            android:textColor="@color/white_2"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_below="@id/tv_email"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/rectangle_editteks_login"
            android:inputType="textEmailAddress"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/tv_password"
            android:layout_below="@id/et_email"
            android:text="password"
            android:textSize="18dp"
            android:textColor="@color/white_2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_below="@id/tv_password"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/rectangle_editteks_login"
            android:inputType="textPassword"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/btn_signin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/et_password"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button_background"
            android:text="Sign in"
            android:textColor="@color/orange_1"
            app:backgroundTint="@color/brown_1"
            tools:ignore="TouchTargetSizeCheck" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_donthaveaccount"
        android:layout_below="@id/layout_emailpassword2"
        android:text="@string/dont_have_any_account"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_createnewaccount"
        android:layout_below="@id/tv_donthaveaccount"
        android:text="@string/create_a_new_account"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_create"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_createnewaccount"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/createbutton_background"
        android:text="create"
        app:backgroundTint="@color/brown_1"
        tools:ignore="TouchTargetSizeCheck" />


</RelativeLayout>