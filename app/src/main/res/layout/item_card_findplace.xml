<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_1">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_findplace"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/orange_2"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="-30dp"
            android:layout_toEndOf="@id/img_gradient"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img_register1"
            android:contentDescription="@string/description_place_container_gradient"/>

        <ImageView
            android:id="@+id/img_gradient"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/tv_place_name"
            android:src="@drawable/gradient_orange2"
            android:contentDescription="@string/description_place_container_gradient"/>

        <TextView
            android:id="@+id/tv_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:text="@string/place_name"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>