<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_icon_bossqueue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_bossqueue_black" />

    <ImageView
        android:id="@+id/img_search_bar"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_icon_bossqueue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_icon_bossqueue"
        app:srcCompat="@drawable/dr_search_box_white" />

    <ImageView
        android:id="@+id/img_search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_search_bar"
        app:layout_constraintStart_toStartOf="@+id/img_search_bar"
        app:layout_constraintTop_toTopOf="@+id/img_search_bar"
        app:srcCompat="@drawable/ic_search_icon" />

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/search"
        android:textSize="11sp"
        android:textColor="@color/search_text_color"
        app:layout_constraintBottom_toBottomOf="@+id/img_search_icon"
        app:layout_constraintStart_toEndOf="@+id/img_search_icon"
        app:layout_constraintTop_toTopOf="@+id/img_search_icon" />

    <TextView
        android:id="@+id/tv_find_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/find_desired_place"
        app:layout_constraintStart_toStartOf="@+id/img_icon_bossqueue"
        app:layout_constraintTop_toBottomOf="@+id/img_icon_bossqueue" />

</androidx.constraintlayout.widget.ConstraintLayout>